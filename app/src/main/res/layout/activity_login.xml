<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/BLACK"
    android:id="@+id/app_rootview">



    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/zoomImgs"
        android:layout_width="600.0dip"
        android:layout_height="fill_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"/>


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:background="@drawable/login_bg1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/iv_sd_no_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/user_default_pic"
                android:visibility="gone"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/BG_CRIDIT_USER_INFO"
                android:textStyle="normal|bold"
                android:id="@+id/textView"
                android:fontFamily="sans-serif"
                android:text="@string/header_name" />

            <ImageView
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="center"
                android:layout_marginTop="20.0dip"
                android:scaleType="fitXY"
                android:spacing="6.0dip"
                android:src="@drawable/ui_head_1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/logineditetext_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spinner_height"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_input_user"/>

                <EditText
                    android:id="@+id/et_device_id"
                    style="@style/et_style_login"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/imageView1"
                    android:background="@android:color/transparent"
                    android:hint="请输入接口号以进行连接"
                    android:maxLength="16"
                    android:paddingLeft="10.0dip"
                    android:textSize="18.0sp"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/btn_history_account"
                    android:layout_width="48.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/login_history_down_arrow_bg"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/DividerColor"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llsub03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="30.0dip">


            <Button
                android:id="@+id/btn_login"
                style="@style/btn_style_white"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/loginbtnbg"
                android:text="连　　接"
                android:textColor="@color/WHITE"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlsub02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15.0dip">


        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
